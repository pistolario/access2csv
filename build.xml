            </manifest>
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="bin"/>
            <zipfileset dir="lib" includes="jackcess-2.1.2.jar"/>
            <zipfileset dir="lib" includes="jackcess-encrypt-2.1.0.jar"/>
            <zipfileset dir="lib" includes="commons-logging-1.1.3.jar"/>
            <zipfileset dir="lib" includes="commons-lang-2.6.jar"/>
            <zipfileset dir="lib" includes="commons-cli-1.3.1.jar"/>
            <zipfileset dir="lib" includes="opencsv-2.3.jar"/>
            <zipfileset dir="lib" includes="bcmail-jdk15on-1.50.jar"/>
            <zipfileset dir="lib" includes="bcpg-jdk15on-1.50.jar"/>
            <zipfileset dir="lib" includes="bcpkix-jdk15on-1.50.jar"/>
            <zipfileset dir="lib" includes="bcprov-ext-jdk15on-1.50.jar"/>
            <zipfileset dir="lib" includes="bcprov-jdk15on-1.50.jar"/>
            <zipfileset dir="lib" includes="bcmail-jdk15on-1.50.jar"/>
        </jar>
    </target>
    <target name="compile">
      <mkdir dir="bin"/>
      <javac includeantruntime="false" srcdir="src" destdir="bin" classpathref="classpath"/>
    </target>
    <target name="run" depends="create_run_jar">
	<exec executable="java">
